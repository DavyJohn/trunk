<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_pay_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/x10"
            android:hint="请输入6-16位的支付密码"
            android:inputType="textPassword"
            android:text=""
            android:maxLength="16"
            android:textColor="@color/black"
            android:textColorHint="@color/login_hint_color"
            android:textSize="@dimen/x14" />

        <ImageView
            android:id="@+id/appearpwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:clickable="true"
            android:padding="@dimen/x10"
            android:src="@drawable/hidepwd"
            android:visibility="visible" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/edit_bg"
            android:drawablePadding="@dimen/x10"
            android:gravity="center_vertical"
            android:hint="@string/register_input_your_vertificode"
            android:inputType="number"
            android:maxLength="6"
            android:text=""
            android:textColor="@color/login_title_color"
            android:textColorHint="@color/login_hint_color"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/get_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/verification_code_common"
            android:clickable="true"
            android:singleLine="true"
            android:gravity="center"
            android:padding="@dimen/x8"
            android:text="@string/register_verification" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x12"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x20"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y30"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x14"
        android:background="@drawable/login_btn"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/x16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x14"
        android:textSize="@dimen/x14"
        android:text="提供设置、修改、找回支付密码功能。"/>

</LinearLayout>