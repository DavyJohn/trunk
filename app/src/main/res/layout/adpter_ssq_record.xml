<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layou_ssq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/background_rl"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10">

            <TextView
                android:id="@+id/ssq_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_tip"
                android:text="第20156080期末"
                android:textSize="@dimen/x16" />

            <TextView
                android:id="@+id/ssq_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ssq_date"
                android:layout_marginLeft="@dimen/x10"
                android:text="2016-07-12"
                android:textColor="@color/grey_tip"
                android:textSize="@dimen/x16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ssq_date"
                android:layout_marginTop="@dimen/x14"
                android:layout_marginBottom="@dimen/x10">
                <TextView
                    android:id="@+id/ssq_one"
                    style="@style/Ball"
                    android:background="@drawable/red_flat_ball"/>
                <TextView
                    android:id="@+id/ssq_two"
                    style="@style/Ball"
                    android:background="@drawable/red_flat_ball"/>
                <TextView
                    android:id="@+id/ssq_three"
                    style="@style/Ball"
                    android:background="@drawable/red_flat_ball"/>
                <TextView
                    android:id="@+id/ssq_four"
                    style="@style/Ball"
                    android:background="@drawable/red_flat_ball"/>
                <TextView
                    android:id="@+id/ssq_five"
                    style="@style/Ball"
                    android:background="@drawable/red_flat_ball"/>
                <TextView
                    android:id="@+id/ssq_six"
                    style="@style/Ball"
                    android:background="@drawable/red_flat_ball"/>
                <TextView
                    android:id="@+id/ssq_seven"
                    style="@style/Ball"
                    android:background="@drawable/blue_flat_ball"/>
            </LinearLayout>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right_arrow"
                android:visibility="gone"
                android:contentDescription="@string/content_description" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line_color" />
    </LinearLayout>
</LinearLayout>