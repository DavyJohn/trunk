<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_pay_pwd1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/x10"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:text=""
            android:maxLength="16"
            android:textColor="@color/black"
            android:textColorHint="@color/login_hint_color"
            android:textSize="@dimen/x14" />

        <ImageView
            android:id="@+id/appearpwd1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:clickable="true"
            android:padding="@dimen/x10"
            android:src="@drawable/hidepwd"
            android:visibility="visible" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_pay_pwd2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/x10"
            android:hint="请输入6-16位的新密码"
            android:inputType="textPassword"
            android:text=""
            android:maxLength="16"
            android:textColor="@color/black"
            android:textColorHint="@color/login_hint_color"
            android:textSize="@dimen/x14" />

        <ImageView
            android:id="@+id/appearpwd2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:clickable="true"
            android:padding="@dimen/x10"
            android:src="@drawable/hidepwd"
            android:visibility="visible" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_pay_pwd3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/x10"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:text=""
            android:maxLength="16"
            android:textColor="@color/black"
            android:textColorHint="@color/login_hint_color"
            android:textSize="@dimen/x14" />

        <ImageView
            android:id="@+id/appearpwd3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:clickable="true"
            android:padding="@dimen/x10"
            android:src="@drawable/hidepwd"
            android:visibility="visible" />
    </FrameLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y30"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y16"
        android:background="@drawable/login_btn"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/x16" />
</LinearLayout>