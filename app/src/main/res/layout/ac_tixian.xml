<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_line_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="@dimen/x12"
        android:background="@color/gray_line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x50"
        android:background="@drawable/background_rl"
        android:clickable="false"
        android:orientation="horizontal">
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="真实姓名"
            android:textColor="@color/login_title_color"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/rel_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:textColor="@color/grey_tip" />

        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/arrow_right_gray"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x50"
        android:background="@drawable/background_rl"
        android:clickable="false"
        android:orientation="horizontal">
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="账户类型"
            android:textColor="@color/login_title_color"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:textColor="@color/grey_tip" />

        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/arrow_right_gray"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x50"
        android:background="@drawable/background_rl"
        android:clickable="false"
        android:orientation="horizontal">
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="账户号码"
            android:textColor="@color/login_title_color"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:textColor="@color/grey_tip" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x50"
        android:background="@drawable/background_rl"
        android:clickable="false"
        android:orientation="horizontal">
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="可提现金额"
            android:textColor="@color/login_title_color"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:textColor="@color/grey_tip" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x50"
        android:clickable="true"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="提现金额"
            android:textColor="@color/login_title_color"
            android:textSize="@dimen/x15" />
        <ImageView
            android:id="@+id/clear1"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/clear_selector" />
        <EditText
            android:id="@+id/money_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/x90"
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@+id/clear1"
            android:hint="请输入最多2位小数的正数"
            android:inputType="number|numberDecimal"
            android:background="@color/white"
            android:textSize="@dimen/x14" />

    </RelativeLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y30"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/login_btn"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/x16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x14"
        android:textSize="@dimen/x14"
        android:text="提现金额预计24小时内到账"/>

</LinearLayout>