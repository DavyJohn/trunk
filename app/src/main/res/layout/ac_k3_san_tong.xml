<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:id="@+id/ac_k3_san_tong_rootview">

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:visibility="visible"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/x14"
            android:padding="@dimen/x10"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/x14"
            android:padding="@dimen/x10"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/rl_time"
        android:id="@+id/ac_k3_san_tong_tip">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/shake_icon"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="放肆摇一摇"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ac_k3_san_tong_tip"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x8"
                    android:text="猜豹子号(3个号相同)"
                    android:textSize="@dimen/x16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_san_tong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x8"
                    android:text="通选"
                    android:textSize="@dimen/x16" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x40"
                android:layout_marginRight="@dimen/x40">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x60"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_tong_xuan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/graybutton"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="三同号通选"
                            android:textColor="@color/red"
                            android:textSize="@dimen/x18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="任意一个豹子开出即中40元"
                            android:textSize="@dimen/x12" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
         

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bt_panel_bg"
        android:id="@+id/relativeLayout5">

        <TextView
            android:id="@+id/tv_auto_choose"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40"
            android:layout_margin="@dimen/x6"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12"
            android:text="机选"
            android:textColor="@color/yellow"
            android:textSize="@dimen/x20"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_zhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/x16" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow"
                android:textSize="@dimen/x16" />
        </LinearLayout>


        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/x6"
            android:background="@drawable/btn_yellow"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12"
            android:text="确定"
            android:textSize="@dimen/x20"
            android:textStyle="bold" />
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/ac_k3_san_floating_action_button"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/shake_icon"
        android:layout_marginBottom="10dp"
        app:borderWidth="0dp"
        app:fabSize="normal"
        android:backgroundTint="#ffffff"
        app:rippleColor="@android:color/holo_red_light"
        android:layout_above="@+id/relativeLayout5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>